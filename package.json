{
  "name": "eightprime-backend",
  "type": "module",
  "version": "1.0.0",
  "description": "Basically, project to manage companies and their employees. Mini-CRM.",
  "main": "server.js",
  "author": "Gerald Hug",
  "license": "MIT",
  "private": true,
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "start": "node server.js",
    "test": "jest --runInBand --detectOpenHandles --watchAll",
    "createData": "node --experimental-modules --es-module-specifier-resolution=node createSubscribersData.js",
    "server": "nodemon server.js",
    "dev": "concurrently \"npm run server\" \"npm run client \"",
    "database": "/mongodb/bin/mongod.exe --dbpath=/mongodb-data",
    "client": "npm start --prefix client",
    "clientinstall": "npm install --prefix client",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "lint": "eslint ./"
  },
  "dependencies": {
    "@babel/preset-react": "^7.18.6",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "date-fns": "^2.29.1",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "helmet": "^5.1.0",
    "jest": "^28.1.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.12",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "platform": "^1.3.6",
    "sharp": "^0.30.7",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/plugin-transform-modules-commonjs": "^7.16.0",
    "@babel/preset-env": "^7.18.6",
    "@faker-js/faker": "^7.3.0",
    "@types/jest": "^28.1.4",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^28.1.2",
    "concurrently": "^7.2.2",
    "dotenv": "^16.0.1",
    "eslint": "^8.3.0",
    "eslint-config-airbnb": "^19.0.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6"
  }
}
